<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />
            <size
                android:width="60dp"
                android:height="60dp"/>
            <stroke
                android:width="4dp"
                android:color="@android:color/darker_gray"/>
        </shape>
    </item>

    <item>
        <shape android:shape="oval">
            <size
                android:width="25dp"
                android:height="25dp"/>
            <stroke
                android:width="2dp"
                android:color="@android:color/darker_gray"/>
        </shape>
    </item>
</layer-list>